generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum Role {
  admin
  provider
}

enum OrderStatus {
  nuevo
  preparando
  enviado
  entregado
  cancelado
}

enum SubscriptionStatus {
  active
  paused
  canceled
}

enum PaymentStatus {
  pending
  approved
  rejected
}

enum PaymentMethod {
  efectivo
  transferencia
}

enum PaymentProofStatus {
  no_aplica
  pendiente
  subido
}

model Provider {
  id                   String              @id @default(uuid())
  name                 String
  slug                 String              @unique
  logoUrl              String?             @map("logo_url")
  contactEmail         String              @map("contact_email")
  contactPhone         String?             @map("contact_phone")
  address              String?
  cuit                 String?
  isActive             Boolean             @default(true) @map("is_active")
  subscriptionStatus   SubscriptionStatus  @default(active) @map("subscription_status")
  subscribedAt         DateTime            @default(now()) @map("subscribed_at")
  renewsAt             DateTime            @default(dbgenerated("now() + interval '30 days'")) @map("renews_at")
  pausedAt             DateTime?           @map("paused_at")
  createdAt            DateTime            @default(now()) @map("created_at")
  updatedAt            DateTime            @updatedAt @map("updated_at")

  clients  Client[]
  products Product[]
  orders   Order[]
  users    User[]
  payments ProviderPayment[]
  paymentSettings ProviderPaymentSettings?
  deliveryWindows DeliveryWindow[]
  transferProfiles ProviderTransferProfile[]

  @@map("providers")
}

model User {
  id         String    @id
  name       String?
  email      String    @unique
  role       Role
  providerId String?   @map("provider_id")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  provider Provider? @relation(fields: [providerId], references: [id], onDelete: SetNull)

  @@map("users")
}

model Client {
  id           String    @id @default(uuid())
  providerId   String    @map("provider_id")
  name         String
  slug         String
  contactName  String?   @map("contact_name")
  contactPhone String?   @map("contact_phone")
  contactEmail String?   @map("contact_email")
  address      String?
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  orders   Order[]
  payments ClientPayment[]

  @@unique([providerId, slug])
  @@map("clients")
}

model Product {
  id         String    @id @default(uuid())
  providerId String    @map("provider_id")
  name       String
  description String?
  brand      String?
  price      Decimal
  unit       String?
  isActive   Boolean   @default(true) @map("is_active")
  imageUrl   String?   @map("image_url")
  category   String?
  tags       String[]  @db.Text @default([])
  isNew      Boolean   @default(false) @map("is_new")
  isOutOfStock Boolean @default(false) @map("is_out_of_stock")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@map("products")
}

model Order {
  id            String      @id @default(uuid())
  providerId    String      @map("provider_id")
  clientId      String      @map("client_id")
  status        OrderStatus @default(nuevo)
  contactName   String      @map("contact_name")
  contactPhone  String      @map("contact_phone")
  deliveryMethod String?    @map("delivery_method")
  paymentMethod PaymentMethod? @map("payment_method")
  paymentProofStatus PaymentProofStatus @default(no_aplica) @map("payment_proof_status")
  paymentProofUrl String?   @map("payment_proof_url")
  note          String?
  deliveryDate  DateTime?   @map("delivery_date")
  deliveryRuleId String?    @map("delivery_rule_id")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  client   Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  items    OrderItem[]
  deliveryRule DeliveryWindow? @relation(fields: [deliveryRuleId], references: [id], onDelete: SetNull)
  clientPayments ClientPayment[]

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String   @map("order_id")
  productId String   @map("product_id")
  quantity  Int
  unitPrice Decimal  @map("unit_price")

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@map("order_items")
}

model ProviderPayment {
  id          String         @id @default(uuid())
  providerId  String         @map("provider_id")
  periodLabel String         @map("period_label")
  proofUrl    String         @map("proof_url")
  status      PaymentStatus  @default(pending)
  note        String?
  reviewedBy  String?        @map("reviewed_by")
  reviewedAt  DateTime?      @map("reviewed_at")
  createdAt   DateTime       @default(now()) @map("created_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@map("provider_payments")
}

model ClientPayment {
  id         String         @id @default(uuid())
  providerId String         @map("provider_id")
  clientId   String         @map("client_id")
  orderId    String?        @map("order_id")
  amount     Decimal
  status     PaymentStatus  @default(pending)
  method     PaymentMethod? @map("method")
  reference  String?
  note       String?
  paidAt     DateTime?      @map("paid_at")
  createdAt  DateTime       @default(now()) @map("created_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  client   Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  order    Order?   @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@map("client_payments")
  @@index([providerId])
  @@index([clientId])
}

model ProviderPaymentSettings {
  id              String  @id @default(uuid())
  providerId      String  @map("provider_id")
  cashEnabled     Boolean @default(true) @map("cash_enabled")
  transferEnabled Boolean @default(true) @map("transfer_enabled")
  transferAlias   String? @map("transfer_alias")
  transferCbu     String? @map("transfer_cbu")
  transferNotes   String? @map("transfer_notes")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId])
  @@map("provider_payment_settings")
}

model ProviderTransferProfile {
  id         String   @id @default(uuid())
  providerId String   @map("provider_id")
  label      String?
  alias      String?
  cbu        String?
  extraInfo  String?  @map("extra_info")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@map("provider_transfer_profiles")
  @@index([providerId])
}

model DeliveryWindow {
  id                  String   @id @default(uuid())
  providerId          String   @map("provider_id")
  cutoffWeekday       Int      @map("cutoff_weekday")
  cutoffTimeMinutes   Int      @map("cutoff_time_minutes")
  deliveryWeekday     Int      @map("delivery_weekday")
  deliveryTimeMinutes Int      @default(600) @map("delivery_time_minutes")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  orders   Order[]

  @@unique([providerId, cutoffWeekday, cutoffTimeMinutes])
  @@map("delivery_windows")
}
